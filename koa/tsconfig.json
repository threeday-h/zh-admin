{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["es2015"],
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "types"],
    "types": ["node"],
    "baseUrl": "./",
    // "paths": {
    //   "@/*": ["./*"]
    // },
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "app.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
