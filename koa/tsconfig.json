{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["es2015"],
    "outDir": "./client",
    // 显式指定 moment 类型
    "typeRoots": ["./node_modules/@types", "types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
